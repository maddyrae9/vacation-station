<div class="row mx-auto my-5" style="max-width: 500px;">
  <div class="col-12">
    <h2>Log In</h2>
    <form id="login-form">
      <div class="form-group mb-3">
        <label for="email-login">Email</label>
        <input
          class="form-control"
          placeholder="email"
          type="text"
          id="email-login"
        />
      </div>
      <div class="form-group mb-3">
        <label for="password-login">Password</label>
        <input
          class="form-control"
          placeholder="password"
          type="password"
          id="password-login"
        />
      </div>
      <div>
        <button
          onclick="login()"
          class="btn btn-primary"
          type="sumbit"
        >login</button>
      </div>
    </form>
  </div>
  <br />
  <p>Dont have an account? Register <a href="/register">here</a></p>
</div>
<script src="javascript/login.js"></script>