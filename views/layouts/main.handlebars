
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>Vacation Station</title>
  </head>
  <style>
    body { max-width: 1440px; margin: 0 auto; } .shop > .shop-item-list {
    display: grid; grid-template-columns: repeat(3, 1fr); grid-gap: 1.5rem; }
    @media screen and (max-width: 768px) { .shop > .shop-item-list { display:
    grid; grid-template-columns: repeat(2, 1fr); grid-gap: 1.5rem; } } @media
    screen and (max-width: 450px) { .shop > .shop-item-list { display: grid;
    grid-template-columns: 1fr; grid-gap: 1.5rem; } } .shop > .shop-item-list >
    .shop-item-list-item { display: flex; width: 100%; height: 500px;
    max-height: 500px; justify-content: center; align-items: center; border: 1px
    solid #f1f1f1; border-radius: 6px; } .shop > .shop-item-list >
    .shop-item-list-item:hover { background-color: #f9f9f9; cursor: pointer;
    transition: all 300ms; } .shop > .shop-item-list > .shop-item-list-item >
    .shop-item-list-item-content { width: 100%; max-width: 350px; max-height:
    100%; } .shop-item-list-item-content > .shop-item-list-item-content-name {
    font-weight: 600; font-size: 1.5rem; } .shop-item-list-item-content >
    .shop-item-list-item-content-description { font-size: 1.2rem; } .shop >
    .shop-item-list > .shop-item-list-item:hover > .shop-item-list-item-content
    > .shop-item-list-item-content-name { color: #0d6efd; transition: all 300ms;
    }

  </style>
  <body style="">
    <header>
      <div
        class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom py-3 px-5"
      >
        <a
          class="d-flex align-items-center text-dark text-decoration-none navbar-brand fs-3"
          href="/"
        >Vacation Station</a>
        <nav
          class="d-flex mt-2 mt-md-0 ms-md-auto align-items-center justify-content-center"
          style="min-width: 300px;"
        >
          <div class="left d-flex me-auto">
            <a
              class="me-3 py-2 text-dark text-decoration-none nav-link"
              href="/shop"
            >Shop</a>
            {{#if user}}
              <a
                class="me-3 py-2 text-dark text-decoration-none"
                href="/cart"
              >Cart</a>
            {{/if}}
          </div>
          {{#if user}}
            <div class="dropdown text-end">
              <a
                href="#"
                class="d-block link-dark text-decoration-none dropdown-toggle text-capitalize"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                {{user.username}}
              </a>
              <ul class="dropdown-menu text-small" style="">
                <li><a class="dropdown-item" href="/logout">Sign out</a></li>
              </ul>
            </div>
          {{else}}
            <a class="btn btn-outline-primary me-2" href="/login">Login</a>
            <a class="btn btn-primary" href="/register">Register</a>
          {{/if}}
        </nav>
      </div>
    </header>
    <div class="container">
      {{{body}}}
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
  </body>
</html>